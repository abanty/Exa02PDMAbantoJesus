<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_card"
    android:background="@drawable/bg_degraded_toolbar"
    android:backgroundTint="@color/colorFacePrimary"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorFacePrimary"
    app:cardCornerRadius="@dimen/corner_card"
    app:elevation="@dimen/margin_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFaceDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/image_card"
            android:layout_height="@dimen/image_card"
            android:layout_margin="@dimen/image_margin"
            android:src="@drawable/logomarket" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Nombre:"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textColor="@color/editTextColorWhite"
                android:textSize="@dimen/textsize"
                tools:targetApi="lollipop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Stock:"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textColor="@color/editTextColorWhite"
                android:textSize="@dimen/textsize"
                tools:targetApi="lollipop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Precio: s/."
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textColor="@color/editTextColorWhite"
                android:textSize="@dimen/textsize"
                tools:targetApi="lollipop" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtproducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                tools:targetApi="lollipop" />

            <TextView
                android:id="@+id/txtstock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                tools:targetApi="lollipop" />

            <TextView
                android:id="@+id/txtprecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                tools:targetApi="lollipop" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>







